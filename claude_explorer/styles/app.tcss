/* Claude Explorer - Main Theme */

Screen {
    background: $surface;
}

/* Footer */
Footer {
    background: #1e1e2e;
}

/* Dashboard */
.stat-box {
    border: round #6c3baa;
    padding: 1;
    height: 100%;
    background: #1e1e2e;
}

#activity-chart {
    column-span: 3;
    border: round #6c3baa;
    padding: 1;
    background: #1e1e2e;
    height: 100%;
}

/* Sessions */
#session-filter {
    dock: top;
    height: 3;
    padding: 0 1;
}

/* Conversation */
#conversation-log {
    height: 1fr;
    padding: 1;
    scrollbar-size: 1 1;
}

#back-to-sessions {
    dock: top;
    width: auto;
    margin: 0 1;
}

#export-btn {
    dock: top;
    width: auto;
    margin: 0 1;
}

/* Search */
#search-controls {
    height: 3;
    dock: top;
}

#search-controls Input {
    width: 1fr;
}

#deep-label {
    width: 7;
    padding: 1 0;
    color: #f9e2af;
}

#deep-switch {
    width: 10;
}

/* Plans */
#plans-layout {
    height: 1fr;
}

/* Todos */
#todos-layout {
    height: 1fr;
}

#todos-sessions-table {
    width: 50;
}

#todos-detail-log {
    width: 1fr;
    padding: 1;
}

/* File History */
#fh-layout {
    height: 1fr;
}

#fh-sessions-table {
    width: 50;
}

#fh-files-log {
    width: 1fr;
    padding: 1;
}

/* Generic widget styles */
DataTable {
    height: 1fr;
}

DataTable > .datatable--cursor {
    background: #45475a;
}

DataTable > .datatable--header {
    background: #6c3baa;
    color: #ffffff;
    text-style: bold;
}

TabbedContent ContentSwitcher {
    height: 1fr;
}

TabPane {
    height: 1fr;
    padding: 0;
}

Input {
    border: round #6c3baa;
}

Input:focus {
    border: round #cba6f7;
}

RichLog {
    scrollbar-size: 1 1;
}

MarkdownViewer {
    padding: 1;
}
